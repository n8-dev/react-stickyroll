{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["dom", "es2015", "es2017.object", "es6", "es7"],
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react",
		"outDir": "dist",
		"sourceMap": true,
		"strict": false,
		"target": "es5"
	},
	"include": ["src/**/*"]
}
